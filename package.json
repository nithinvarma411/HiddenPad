{
  "name": "electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run server-dev\" \"npm run client\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-prod": "concurrently \"npm run server-prod\" \"npm run client\" \"wait-on http://localhost:5173 && electron .\"",
    "server-dev": "cd src/main && npm run dev",
    "server-prod": "cd src/main && npm start",
    "client": "cd src/rendered && npm run dev",
    "build": "cd src/rendered && npm run build",
    "copy-env": "copy src\\main\\.env dist\\main\\",
    "build-backend": "esbuild src/main/server.js --bundle --platform=node --outdir=dist/main",
    "dist": "npm run build && npm run build-backend && npm run copy-env && electron-builder",
    "install-deps": "npm install && cd src/main && npm install && cd ../rendered && npm install"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.hiddenpad.desktop",
    "productName": "HiddenPad",
    "directories": {
      "output": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/rendered/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/main",
        "to": "server"
      }
    ],
    "asar": true
  }
}
